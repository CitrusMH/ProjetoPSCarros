<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

<br>
<div class="container">
    <a href="/usuarios/novo" class="btn bg-dark text-white" style="margin-bottom: 24px;">Novo Usuário</a>
    <br>
    <div class="card bg-dark text-white">
        <div class="card-header">
            Usuários Cadastrados
        </div>
        <div class="card-body text-white">
            <table class="table text-white table-borderless">
                <thread>
                    <th class="col-5">Nome do Usuário</th>
                    <th class="col-5">E-mail</th>
                    <th class="col-2">Ações</th>
                </thread>
                <tbody>
                    <% usuarios.forEach(usuario => { %>
                        <tr>
                            <td><%= usuario.nome %></td>
                            <td><%= usuario.email %></td>
                            <td>
                                <a href="/usuarios/<%= usuario.id %>" class="btn btn-primary">Editar</a>
                                <a href="/usuarios/delete/<%= usuario.id %>" class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<%- include('../partials/footer.ejs') %>