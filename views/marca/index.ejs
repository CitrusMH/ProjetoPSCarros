<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>
<br>
<div class="container">
    <a href="/marcas/novo" class="btn bg-dark text-white mb-4">Nova Marca</a>
    <br>
    <div class="card bg-dark text-white">
        <div class="card-header">
            Marcas Cadastradas
        </div>
        <div class="card-body">
            <table class="table text-white table-borderless" >
                <thead>
                    <th class="col-8">Nome da marca</th>
                    <th class="col-1">Fundação</th>
                    <th class="col-1">Extinção</th>
                    <th class="col-2">Ações</th>
                </thead>
                <tbody>
                    <% marcas.forEach(marca => { %>
                        <tr>
                            <td><%= marca.nome %></td>
                            <td><%= marca.fundacao ? ("0" + marca.fundacao.getDate()).slice(-2) +"/"+("0" + (marca.fundacao.getMonth() + 1)).slice(-2)+"/"+marca.fundacao.getFullYear() : "Não Declarada" %></td>
                            <td><%= marca.extincao ? ("0" + marca.extincao.getDate()).slice(-2) +"/"+("0" + (marca.extincao.getMonth() + 1)).slice(-2)+"/"+marca.extincao.getFullYear() : "Não Extinta" %></td>
                            <td>
                                <a href="/marcas/<%= marca.id %>" 
                                    class="btn btn-primary">Editar</a>
                                <a href="/marcas/delete/<%= marca.id %>" 
                                    class="btn btn-danger">Excluir</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>